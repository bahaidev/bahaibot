{
  "name": "bahaibot",
  "version": "0.3.0",
  "description": "A bot made for Bahá'í discourses",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "bot": "./src/bot.js",
    "discordBot": "./src/discordBot.js",
    "getDialogflowAdapter": "./src/getDialogflowAdapter.js",
    "integratedClientServerBot": "./src/integratedClientServerBot.js"
  },
  "bin": {
    "bahaibot": "./src/binary.js"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.19.0",
    "@google-cloud/dialogflow": "^7.2.1",
    "discord-tts": "^1.2.2",
    "discord.js": "^14.23.2",
    "discord.js-rate-limiter": "^1.3.2",
    "file-fetch": "^2.0.1",
    "intl-dom": "^0.20.0",
    "node-fetch": "^3.3.2",
    "set-safer-interval": "^0.4.0",
    "simple-post-json": "^0.9.2",
    "string-strip-html": "^13.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.28.4",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "@brettz9/node-static": "^0.1.1",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/chai": "^5.2.2",
    "@types/file-fetch": "^1.6.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.8.1",
    "@types/sinon": "^17.0.4",
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "eslint": "^9.38.0",
    "eslint-config-ash-nazg": "39.5.0",
    "eslint-plugin-jsonc": "^2.21.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "rollup": "^4.52.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "scripts": {
    "prepublishOnly": "pnpm i && pnpm rollup",
    "serve": "static -p 8095",
    "tsc": "tsc",
    "rollup": "rollup -c",
    "lint": "eslint --ext=js,md,html .",
    "lint-arg-fix": "eslint --fix --ext=js,md,html",
    "lint-json-arg-fix": "eslint --config=eslint.config.json.js --fix --ext=json",
    "lint-json": "eslint --config=eslint.config.json.js --ext=json library",
    "start-dev": "nodemon src/index.js",
    "start": "node src/index.js --checkins",
    "start-prod": "node src/index.js --checkins --production",
    "mocha": "mocha --exit --timeout 9000",
    "prepare": "husky",
    "test": "rm -Rf ./node_modules/.cache && c8 --check-coverage --statements 100 --lines 100 --functions 100 --branches 100 npm run mocha test/*.js"
  },
  "lint-staged": {
    "library/*.json": "npm run lint-json-arg-fix --",
    "*.{js,md,html}": "npm run lint-arg-fix --"
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahaidev/bahaibot.git"
  },
  "keywords": [
    "discord",
    "bot",
    "Bahai"
  ],
  "author": "Bahaidev",
  "contributors": [
    "Adib Behjat",
    "dragfyre",
    "Brett Zamir"
  ],
  "license": "GPL-2.0-only",
  "bugs": "https://github.com/bahaidev/bahaibot/issues",
  "homepage": "https://github.com/bahaidev/bahaibot#readme"
}
